<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Use prettier-ignore to preserve the formatting -->
    <!-- prettier-ignore -->
    <% if(config.header) { %> 
    <%- include ('./bootstrap/header', { header: config.header }); %> 
    <% } %>

    <!-- Use prettier-ignore to preserve the formatting -->
    <!-- prettier-ignore -->
    <% if(config.content) { %>
    <!-- prettier-ignore -->
    <%- include ('./bootstrap/content', { listTitle: config.content.listTitle, 
                                          listItems: config.content.listItems });%>
    <% } %>

    <!-- Use prettier-ignore to preserve the formatting -->
    <!-- prettier-ignore -->
    <% if(config.footer) { %> 
    <%- include ('./bootstrap/footer', { text: config.footer });%> 
    <% } %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
